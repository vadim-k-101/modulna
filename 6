#include <stdio.h> //connect lib
#include <math.h>

void white () {
  printf("\033[0;37m");
}
int main(void) {
    float x, f;
    printf("\n Give x = ");
    scanf("%f", &x);

    if (x<-10)
        f=pow(3*x, 3)-x*x;
    if (-10<=x && x<=10)
        f=sqrt(10-x);
    if  (x>10)
        f=2*x+1;
    printf("\tShorthand for the branch operator if: \033[0;32m%2.2f\n", f);
    white();
    if (x<-10)
        f=pow(3*x, 3)-x*x;
    else if (-10<=x && x<=10)
        f=sqrt(10-x);
    else 
        f=2*x+1;

    printf("\tShorthand for the branch operator if ... else: \033[0;32m%2.2f", f);
    white();
    return 0;
}
